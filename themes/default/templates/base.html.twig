<!doctype html>
<html lang="en">
<head>

    <!-- meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- page title -->
    <title>{% block title %}Welcome to Wikelian!{% endblock %}</title>

    <!-- styles -->
    <link href="{{ asset('media/css/bootstrap.min.css') }}" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <link href="{{ asset('media/css/custom.css') }}" rel="stylesheet">

</head>
<body>

    <!-- website header -->
    <header>
        {% include '_partials/menu.html.twig' %}
    </header>

    <!-- website main content -->
    <main class="my-5">
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </main>

    <!-- website footer -->
    <footer class="text-center">
        <p class="mb-1">&copy; Wikelian, All rights reserved</p>
        <p>Coded by Tibelian</p>
    </footer>

    <!-- javascripts -->
    <script src="{{ asset('media/js/bootstrap.bundle.min.js') }}"></script>
    {% block javascripts %}{% endblock %}

</body>
</html>